                                        <input class="form-check-input" type="radio" name="exampleRadios" id="editdataexistingcheck" value="option1" checked>
                                        <label class="form-check-label" for="editdataexistingcheck">
                                            Existing:  
                                        </label>
                                    </div>
                                </label>
                                <div class="col-sm-10">
                                    <div class="form-group">
                                        <select class="form-control" id="selectexistingdata">
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="expertDataValue" class="col-sm-2 col-form-label">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="editdatanew" value="option2">
                                        <label class="form-check-label" for="editdatanew">
                                            New:  
                                        </label>
                                    </div>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="newdatavalue" id="expertNewDataValue" value="">
                                </div>
                            </div>
                            <input type="hidden" id="dataID" name="dataid" value="">
                            <input type="hidden" id="expertID" name="custId" value={{_context.expert.Id}}>
                            <div class="modal-footer ">
                                <button type="button" id="dataedit" class="btn btn-info btn-lg" style="width: 100%;"></span>Update and Approve</button>
                            </div>
                        </form>
                    </div>

                </div>
                <!-- /.modal-content --> 
            </div>
            <!-- /.modal-dialog --> 
        </div>


        <div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Do you want to remove the following record ?</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group row">
                                <label for="expertDataType" class="col-sm-2 col-form-label">Data:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control-plaintext" name="datatype" id="expertDataType" value="" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="expertDataValue" class="col-sm-2 col-form-label">Value:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control-plaintext" name="datavalue" id="expertDataValue" value="" readonly>
                                </div>
                            </div>
                            <input type="hidden" id="dataID" name="dataid" value="">
                            <input type="hidden" id="expertID" name="custId" value={{_context.expert.Id}}>
                            <div class="modal-footer ">
                                <button type="button" id="datadelete" class="btn btn-danger btn-lg" style="width: 100%;"></span>Delete Record</button>
